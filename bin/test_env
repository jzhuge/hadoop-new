#!/usr/bin/env bash

if [[ -z $HADOOP_HOME ]]; then
  export HADOOP_HOME=$(detect_hadoop_home)
  if [[ -z $HADOOP_HOME ]]; then
    echo -e "Please set HADOOP_HOME"
    exit 1
  fi
fi

PATH="$HADOOP_HOME/bin":$PATH

test_env="$HADOOP_HOME/etc/hadoop/test_env"
if [[ -r "$test_env" ]]; then
  . $test_env
  export $(grep -v '^#' "$test_env" | cut -d= -f1)
fi

exec "$@"
